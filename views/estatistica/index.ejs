<% include ../partials/headerProfessor %>

<div id="actions" >
    <div class="row" >
        <div class="col s12" >
            <h1 class="flow-text" ><i class="material-icons left">trending_up</i>Resultados</h1>
            <div class="divider" ></div>
        </div>
    </div>
</div>
<section class="top-20">
    <div class="row" >
        <% if(estatisticas.length > 0){ %>
            <% estatisticas.forEach(function(estatistica) { %>
                <div class="col s12 m4">
                    <div class="card">
                        <div class="card-content">
                            <a href="#" ><span class="card-title activator grey-text text-darken-4"><b>Sala:</b> <%- estatistica.sala %></span></a>
                            <a href="#" ><span class="card-title activator grey-text text-darken-4"><b>Quiz:</b> <%- estatistica.quiz %></span></a>
                            <a href="#" ><span class="card-title activator grey-text text-darken-4"><b>Data:</b> <%- moment(estatistica.created_at).format('DD/MM/YYYY') %></span></a>
                        </div>
                        <div class="card-action">
                            <form action="/estatistica/<%- estatistica._id %>?_method=delete" method="post" >
                                <a href="estatistica/<%- estatistica._id %>/mostrar" class="grey-text lighten-2 left top-2" ><i class="material-icons">trending_up</i>Mostrar</a>
                                <button class="btn-flat waves-effect waves-light red-text font-15 fix-delete" ><i class="material-icons">delete</i>Excluir</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <%- include('../partials/messages', {message: 'Nenhuma Estastistica cadastrada! :(', color: 'orange lighten-2' }); %>
        <% } %>
    </div>
</section>
<script>
document.addEventListener('DOMContentLoaded', function() {
    var elems = document.querySelectorAll('.tooltipped');
    var instances = M.Tooltip.init(elems, []);
});
</script>
<% include ../partials/footerProfessor %>