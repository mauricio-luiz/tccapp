<% include ../partials/headerAluno %>
<section>
    <div class="row" >
        <div class="col s12" >
            <h1 class="flow-text"><i class="material-icons small left">home</i>Inicio</h1>
            <div class="divider" ></div>
        </div>
    </div>
</section>
<div class="row">
    <div class="col s12">
      <div class="card">
        <form action="/sala/entrar" method="post" >
            <div class="card-content">
                <span class="card-title">Adicione Quizzes</span>
                <p>Adicione quizzes apenas indicando o nome da sala e seu código:</p>
                <div class="row" >
                    <div class="col s12" >
                        <div class="input-field col s12">
                            <input id="sala" type="text" class="validate" name="sala[nome]">
                            <label for="sala">Nome Sala</label>
                        </div>
                    </div>
                    <div class="col s12" >
                        <div class="input-field col s12">
                            <input id="codigo" type="text" class="validate" name="sala[codigo]">
                            <label for="codigo">Código</label>
                        </div>
                    </div>
                    <div class="col s12 center-align" >
                        <button class="btn waves-effect waves-light" type="submit" name="action">Inciar Quiz
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                </div>
            </div>
        </form>
      </div>
    </div>
  </div>
<% include ../partials/footerAluno %>