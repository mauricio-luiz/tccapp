<% include ../partials/headerProfessor %>

<section>
    <div class="row" >
        <div class="col s12" >
            <h1 class="flow-text"><i class="material-icons left">folder</i>Criar Sala</h1>
            <div class="divider" ></div>
        </div>
    </div>
</section>
<section>
    <div class="row">
        <form class="col s12" action="/sala/<%- sala._id %>?_method=put" method="post">
            <div class="row">
                <div class="col s12">
                    <div class="card">
                        <div class="card-content">
                            <span class="card-title">Um nome para sua Sala e um código de acesso</span>
                                <div class="row">
                                    <div class="col s12 m6" >
                                    <div class="input-field col s12">
                                    <input id="nome" type="text" name="sala[nome]" class="validate" value="<%- sala.nome %>" >
                                    <label for="nome">Nome</label>
                                </div>
                                <div class="input-field col s12">
                                    <input id="codigo" type="text" name="sala[codigo]" class="validate" value="<%- sala.codigo %>" >
                                    <label for="codigo">Código de Acesso <small>(exemplo: SALA123)</small></label>
                                </div>         
                                <div class="col s4" >
                                    <a class="btn waves-effect waves-light grey" href="/salas" >Salas
                                        <i class="material-icons left" >arrow_back</i>
                                    </a>
                                </div>
                                <div class="col s4" >
                                    <button class="btn waves-effect waves-light teal lighten-2" type="submit" name="action">Salvar
                                        <i class="material-icons right">save</i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
           
        </form>
    </div>
</section>
<% include ../partials/footerProfessor %>