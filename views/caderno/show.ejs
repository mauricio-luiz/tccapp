<% include ../partials/headerAluno %>
<div class="container" >
    <header>
        <div class="row" >
            <div class="col s12" >
                <h1 class="flow-text"><i class="material-icons left">books</i>Exercícios</h1>
            </div>
        </div>
    </header>
    <main>
        <section>
            <div class="row">
                <form class="col s12" action="/sala/entrar" method="post">
                    <div class="row">
                        <% if(resultados.length > 0){ %>
                            <% resultados.forEach(function(resultado) { %>
                                <div class="col s12 m6 l4">
                                    <div class="card">
                                        <div class="card-image waves-effect waves-block waves-light">
                                            <i class="material-icons left grey-text lighten-2">local_library</i>
                                        </div>
                                        <div class="card-content">
                                            <span class="card-title activator grey-text text-darken-4"><%- resultado.exercicio %></span>
                                            <p><a href="/resultado/<%- resultado.id %>/mostrar"> <i class="material-icons left blue-text lighten-2">trending_up</i>Gabarito</a></p> 
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <%- include('../partials/messages', {message: 'Nenhum Exercício Feito! :(', color: 'orange lighten-2' }); %>
                        <% } %>
                    </div>
                </form>
            </div>
        </section>
    </main>
</div>
<% include ../partials/footerAluno %>