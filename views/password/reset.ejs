<% include ../partials/header %>
<div class="row" >
    <div id="cbox">
        <section class="cboxPf">
            <div class="row" >
                <div class="col s12 center-align" >
                    <header>
                        <h1 class="flow-text">TCC</h1>
                        <h4 class="flow-text">Trocar a senha</h4>
                    </header>
                </div>
            </div>
            <div class="row">
                <form class="col s12 center-align" action="/reset" method="post">                   
                    <div class="row">
                        <div class="input-field col s5  offset-s1">                   
                            <input type="password" name="usuario[password]" id="password" >
                            <label for="password">Senha:</label>
                        </div>
                        <div class="input-field col s5">                   
                            <input type="password" name="usuario[password_confirmation]" id="password_confirmation" >
                            <label for="password_confirmation">Confirmar Senha:</label>
                            <span class="helper-text red-text left-align" data-error="wrong" ><%- message.password %></span>
                        </div>
                        <input type="hidden" name="usuario[token]" value="<%- token %>" >
                    </div>                  
                    <div class="row" >
                        <div class="col s12" >
                            <div class="col s12" >
                                <div class="col s12" >
                                    <div class="col s12" >
                                        <button class="btn waves-effect waves-light blue lighten-2 right" type="submit" name="action">Trocar
                                            <i class="material-icons right">send</i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" >
                        <a class="waves-effect waves-teal btn-flat small" href="/" >Voltar</a>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>

<% include ../partials/footer %>