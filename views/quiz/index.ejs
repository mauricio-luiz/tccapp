<% include ../partials/headerProfessor %>

    <div id="actions" >
        <div class="row" >
            <div class="col s12" >
                <h1 class="flow-text" ><i class="material-icons left">assignment</i>Quizzes</h1>
                <div class="divider" ></div>
            </div>
        </div>
    </div>    
    <section class="top-20">
        <div class="row" >
            <div class="col s12 m6 l4">
                <ul>
                    <li><a href="#" id="createQuiz" class="waves-effect waves-light btn left"><i class="material-icons left">add</i>Adicionar</a></li>
                </ul>
            </div>
        </div>
        <div class="row">
            <% if(quizzes.length > 0){ %>
                <% quizzes.forEach(function(quiz) { %>
                    <div class="col s12 m12 l4">
                        <div class="card">
                            <div class="card-image waves-effect waves-block waves-light">
                                <a href="/quiz/<%- quiz.id %>/duplicar" class="grey-text lighten-2 left top-2" ><i class="material-icons">rotate_right</i>Clonar</a>
                            </div>
                            <div class="card-content">
                            <a href="/quiz/<%- quiz.id %>/editar" ><span class="card-title activator grey-text text-darken-4"><%- quiz.nome %></span></a>
                            </div>
                            <div class="card-action">
                                <form action="/quiz/<%- quiz._id %>?_method=delete" method="post"  onsubmit="return antesExcluir(this, event)" >
                                    <a href="/quiz/<%- quiz.id %>/editar" class="grey-text lighten-2 left top-2" ><i class="material-icons">edit</i>Editar</a>
                                    <button class="btn-flat waves-effect waves-light red-text font-15 fix-delete" ><i class="material-icons">delete</i>Excluir</button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <%- include('../partials/messages', {message: 'Nenhum Quiz encontrado! :(', color: 'red darken-3' }); %>
            <% } %>
        </div>
    </section>
   
<script>
document.addEventListener('DOMContentLoaded', function() {
    var elems = document.querySelectorAll('.tooltipped');
    var instances = M.Tooltip.init(elems, []);
  });
</script>
